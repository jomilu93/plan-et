<div class= 'container' style='list-style-type:none'>
  <h4><%= @trip.name %></h4>
  <h5>From <%= @trip.start_date.strftime("%b %e") %> to <%= @trip.end_date.strftime("%b %e, %Y") %> </h5>
    <% @trip_dates.each do |date|%>
    <h5> <%= date.strftime("%A, %b %e") %> </h5>
      <% @activities.each do |act| %>
        <% if act.start_time.day == date.day %>
          <p><span><b><%= act.start_time.strftime("%H:%M") %></b></span>  <span><%= act.activityable_type %></span></p>
        <% else "" %>
        <% end %>
      <% end %>
    <br />
    <% end %>
  </div>
</div>

<div>
  <div class= 'container' style='list-style-type:none'>
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
    +
  </button>
</div>

