

  <div class= "text-center m-5">
    <h2> Create your Trip!</h2>
  </div>

  <div class = "container mb-5">
    <%= simple_form_for @trip do |f| %>
    <%= f.input :name, required: true %>
    <%= f.input :description, required: true %>
    <%= f.input :start_date, as: :date, html5: true, required: true%>
    <%= f.input :end_date, as: :date, html5: true, required: true %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <p>Would you like to share your trip with other travelers?</p>
     <%= f.input :private,:label => '' , as: :radio_buttons%>
    <%= f.button :submit, "Create", class: 'btn btn-secondary' %>
    <%end%>


  </div>



