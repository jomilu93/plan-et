
  <div class= "text-center m-5">
      <h1>My Trips</h1>
  </div>


<h2 class="text-center m-3">Your Trip</h2>

   <div class="d-flex flex-row flex-wrap justify-content-center pb-4">

    <% @trips.each do |trip| %>
    <%if trip.end_date >= Date.today and trip.start_date <= Date.today %>
      <div class="card border-secondary color-white ml-3 mr-3 mb-3 ">
        <%#= cl_image_tag trip.photos.first.key, height: 300, width: 400, crop: :lfill, class: 'card-img' %>
        <!-- <div class="card-img-overlay d-flex flex-column justify-content-end"> -->
          <h5 class="card-title text-black m-3"><%= link_to "#{trip.name}", trip_path(trip), class: "text-black font-weight-bold"%></h5>
          <p class="card-title text-center"><%= trip.start_date%> to <%= trip.end_date%> </p>

        <!-- </div> -->
      </div>
    <%end%>
    <%end%>

  </div>


  <h2 class="text-center m-3">Upcoming Trips</h2>

  <div class="d-flex flex-row flex-wrap justify-content-around pb-4">
