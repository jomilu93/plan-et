
<% content_for :meta_title, "Manage your trips on Plan-et" %>
<% content_for :meta_description, "See all your trip itineraries, past current and future!" %>
<% content_for :meta_image, cl_image_path(@trips.sample.photos.first) if @trips %>


<div class= "hero-image-trips">
  <div class="hero-text">
    <h1>My Trips</h1>
  </div>
</div>


<!-- Tabs -->
<div>
  <div class= "index">
    <section id="tabs">
      <div class="container">

        <nav>
          <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active text-reset" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Upcoming Trips </a>
            <a class="nav-item nav-link text-reset" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Previous Trips</a>
            <a class="nav-item nav-link text-reset" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Current Trip</a>
          </div>
        </nav>

        <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">

          <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
            <div class="d-flex flex-row justify-content-start align-items-center flex-wrap">

              <!-- <div class="row"> -->
                <% @trips.each do |trip| %>
                <!-- <div class="col-sm-12 col-md-6"> -->
                  <%if trip.start_date > Date.today %>
                  <div class="card-product">


                    <%= cl_image_tag trip.photos.first.key, height: 100, width: 100, class: "rounded-circle ml-4 mr-3"%>

                    <div class="card-product-infos">



                      <h6><%= link_to "#{trip.name}", trip_path(trip), class: "text-reset"%></h6>


                      <p><%= trip.start_date.to_time.strftime('%B %e')%> to <%= trip.end_date.strftime('%B %e, %Y')%></p>
                    </div>





                  <!-- </div> -->
                  </div>
                  <%end%>
                <%end%>
              <!-- </div> -->
            </div>
          </div>


          <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
            <div class="d-flex flex-row justify-content-start align-items-center flex-wrap">
              <!-- <div class="row"> -->
                <% @trips.each do |trip| %>
                <!-- <div class="col-sm-12 col-md-6"> -->
                  <%if trip.start_date < Date.today %>
                  <div class="card-product">
                    <%= cl_image_tag trip.photos.first.key, height: 100, width: 100, class: "rounded-circle ml-5 mr-3"%>
                    <div class="card-product-infos">
                      <h6><%= link_to "#{trip.name}", trip_path(trip), class: "text-reset"%></h6>
                      <p><%= trip.start_date.to_time.strftime('%B %e')%> to <%= trip.end_date.strftime('%B %e, %Y')%></p>
                    </div>
                  <!-- </div> -->
                  </div>
                  <%end%>
                <%end%>
              <!-- </div> -->
            </div>
          </div>

          <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
            <div class="d-flex flex-row justify-content-start align-items-center flex-wrap">
              <!-- <div class="row"> -->
                <% @trips.each do |trip| %>
                <!-- <div class="col-sm-12 col-md-6"> -->
                  <%if trip.end_date >= Date.today and trip.start_date <= Date.today %>
                  <div class="card-product">
                    <%= cl_image_tag trip.photos.first.key, height: 100, width: 100, class: "rounded-circle ml-5 mr-3"%>
                    <div class="card-product-infos">
                      <h6><%= link_to "#{trip.name}", trip_path(trip), class: "text-reset"%></h6>
                      <p><%= trip.start_date.to_time.strftime('%B %e')%> to <%= trip.end_date.strftime('%B %e, %Y')%></p>
                    </div>
                  <!-- </div> -->
                  </div>
                  <%end%>
                <%end%>
              <!-- </div> -->
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>




