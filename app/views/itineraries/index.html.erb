
  <div class= "text-center m-5">
      <h1>My Trips</h1>
  </div>

<h2 class="text-center m-3">Your Trip</h2>

   <div class="d-flex flex-row flex-wrap justify-content-center pb-4">

    <% @itineraries.each do |itinerary| %>
    <%if itinerary.end_date = Date.today %>
      <div class="card border-secondary color-white ml-3 mr-3 mb-3 ">
        <%#= #cl_image_tag itinerary.photos.first.key, height: 300, width: 400, crop: :lfill, class: 'card-img' %>
        <!-- <div class="card-img-overlay d-flex flex-column justify-content-end"> -->
          <h5 class="card-title text-black m-3"><%= link_to "#{itinerary.trip_name}", itinerary_path(itinerary), class: "text-black font-weight-bold"%></h5>
          <p class="card-title text-center"><%= itinerary.start_date%> to <%= itinerary.end_date%> </p>
          <p class="card-title text-center"><%= itinerary.country%></p>
        <!-- </div> -->
      </div>
    <%end%>
    <%end%>

  </div>


