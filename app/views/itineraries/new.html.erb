<h1> Create your Itinerary!</h1>

<div class = 'container'>
  <%= simple_form_for @itinerary do |f| %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.input :name, required: true %>
  <%= f.input :start_date, as: :date, html5: true, required: true %>
  <%= f.input :end_date, as: :date, html5: true, required: true %>
  <%= f.input :country, required: true %>
  <%= f.button :submit, "Create", class: 'btn btn-primary' %>
  <%end%>
</div>
